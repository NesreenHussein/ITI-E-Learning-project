@model IEnumerable<Student>

<h1 class="alert alert-success">Student Index</h1>

<a asp-controller="Students" asp-action="GetCreateView" class="btn btn-success mb-1">Create New</a>

<form method="get" asp-controller="Students" asp-action="GetIndexView">
    <input type="text" name="search" value="@ViewBag.Search" />
    <button type="submit" class="btn btn-secondary input-group-append"><i class="bi bi-search"></i></button>
</form>


@if(Model.Count()>0)
{
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr> 
                <th>Id</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FullName</td>
                    <td >@item.StudentAccount</td>
                    <td >@item.StudentPhoneNumber</td>
                    <td><a asp-controller="Students" asp-action="GetDetailsView" asp-route-id="@item.Id" class="btn-outline-warning"><i class="bi bi-list-ul"></i></a></td>

                    <td><a asp-controller="Students" asp-action="GetEditView" asp-route-id="@item.Id" class="btn-outline-primary"><i class="bi bi-pencil-square"></i></a></td>

                    <td><a asp-controller="Students" asp-action="GetDeleteView" asp-route-id="@item.Id" class="btn-outline-success"><i class="bi bi-trash"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1 class="alert alert-danger text-center">There is no students to display</h1>
}




@if (Model.Count()>0)
{
    @foreach (var item in Model )
    {
        <div class="card border-success bg-transparent mb-2 text-dark text-center" style="width:18rem;height:12rem;display:inline-block">
            <div class="card-header border-success bg-transparent">
                @item.Id
            </div>
            <div class="card-body border-success bg-transparent">
                <h5 class="card title">@item.FullName</h5>
                <div class="card-text">@item.StudentAccount</div>
            </div>
            <div class="card-footer border-success bg-transparent">@item.StudentPhoneNumber
            </div>
        </div>
    }
}
else
{
    <h1 class="alert alert-danger">There is no students to display.</h1>
}


