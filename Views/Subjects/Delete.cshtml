@model Subject
<h1 class="alert alert-danger">Are you sure you want to delete this?</h1>


<partial name="_SubjectsData" />

<form method="post" asp-controller="Subjects" asp-action="DeleteCurrent">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mb-2">Delete</button>

</form>
<ul class=" col-4 list-group mb-2">
    <li class="list-group-item active">Students</li>
    @foreach (var employee in Model.Students)
    {
        <a asp-controller="Students" asp-action="GetDetailsView" asp-route-id="@employee.Id" style="text-decoration:none">
        <li class="list-group-item  list-group-item-action">
                @employee.FullName (@employee.StudentDepartment)
        </li>
        </a>
    }
</ul>

<a asp-controller="Subjects" asp-action="GetIndexView">Back To List</a>

