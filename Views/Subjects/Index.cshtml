@model IEnumerable<Subject>

<h1 class="alert alert-success">Subjects Index</h1>

<a asp-controller="Subjects" asp-action="GetCreateView" class="btn btn-success mb-1">Create New</a>

<form method="get" asp-controller="Subjects" asp-action="GetIndexView">
    <input type="text" name="search" value="@ViewBag.Search" />
    <button type="submit" class="btn btn-secondary input-group-append"><i class="bi bi-search"></i></button>
</form>


@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(s=>s.Id)</th>
                <th>@Html.DisplayNameFor(s=>s.Name)</th>
                <th>@Html.DisplayNameFor(s=>s.RegistrationAmount)</th>
                <th>@Html.DisplayNameFor(s=>s.StartDate)</th>
                <th>@Html.DisplayNameFor(s=>s.EndDate)</th>
                <th>@Html.DisplayNameFor(s=>s.IsActive)</th>
                <th>@Html.DisplayNameFor(s=>s.CreditHours)<th/>
                
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.RegistrationAmount</td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td>@item.IsActive</td>
                    <td>@item.CreditHours</td>

                    <td><a asp-controller="Subjects" asp-action="GetDetailsView" asp-route-id="@item.Id" class="btn-outline-warning"><i class="bi bi-list-ul"></i></a></td>

                    <td><a asp-controller="Subjects" asp-action="GetEditView" asp-route-id="@item.Id" class="btn-outline-primary"><i class="bi bi-pencil-square"></i></a></td>

                    <td><a asp-controller="Subjects" asp-action="GetDeleteView" asp-route-id="@item.Id" class="btn-outline-success"><i class="bi bi-trash"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1 class="alert alert-danger text-center">There is no subjects to display</h1>
}




@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <div class="card border-success bg-transparent mb-2 text-dark text-center" style="width:18rem;height:12rem;display:inline-block">
            <div class="card-header border-success bg-transparent">
                @item.Id
            </div>
            <div class="card-body border-success bg-transparent">
                <h5 class="card title">@item.Name</h5>
                <div class="card-text">@item.Description</div>
            </div>
            <div class="card-footer border-success bg-transparent">
                @item.RegistrationAmount
            </div>
        </div>
    }
}
else
{
    <h1 class="alert alert-danger">There is no subjects to display.</h1>
}


